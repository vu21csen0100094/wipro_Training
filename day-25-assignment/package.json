{
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",

    "test": "mocha --exit \"test/**/*.spec.js\"",
    "coverage": "nyc npm test",
    "check-coverage": "nyc check-coverage --lines 100 --statements 100 --functions 100 --branches 100",

    "ci-test": "npm run coverage && npm run check-coverage"
  },

  "nyc": {
    "reporter": ["text", "lcov"],
    "exclude": ["test", "config"],
    "all": true
  }
}
